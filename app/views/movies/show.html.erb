<!DOCTYPE html>
<html lang="ja">
<head>
  <%= render 'shared/head' %>
  <title>show</title>
</head>
<body>
    <div class="movies_data">
      <%= image_tag @movie.image_url %> 
      <p><%= @movie.name %> </p>	
      <p><%= @movie.year %></p>
      <p><%  @movie.description%></p>
      <% @schedules.each do |s|%>
      <p><%= s.start_time %>〜<%= s.end_time %></p>
      <% end%>
    </div>  

  <div class="reservation">
    <%= form_with model: @reservation, url: movie_schedule_sheets_path(movie_id: @movie.id, schedule_id: @schedule.id), method: :get do |f| %>
      <%= f.select :date, week_reservation %>
      <%= f.submit "座席を予約する"%>
    <% end %>
  </div>
</body>
</html>